<div class="progress-wrapper">
	<h3>Aguarde enquanto processamos o seu site</h3>
	<div class="progress">
	  <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
	    0%
	  </div>
	</div>
</div>

<div class="show-wrapper">

	<div class="top-wrapper">
		<h4>Análise:</h4>
		<h3><%= @url %></h3>
	</div>
	
	<div class="table-wrapper">
		<table class="table">
			<tr>
				<th>TAG</th>
				<th>Conteúdo</th>
				<th>Dica</th>
				<th>Resultado</th>
			</tr>
			<% @results.each do |result| %>
				<% if result.score == "Reprovado" %>
					<tr class="danger">
				<% else %>
					<tr>
				<% end %>
					<td><%= result.tag %></td>
					<td><%= result.content %></td>
					<td><b><%= result.hint %></b></td>
					<td style="text-align:center">
						<% if result.score == "Reprovado" %>
								<span style="color:red" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
						<% else %>
							<% if result.score == "Aprovado" %>
									<span style="color:green" class="glyphicon glyphicon-ok" aria-hidden="true"></span>
							<% else %>
									<span style="color:#f0ad4e; font-size:18px" style="margin-left:3px"><b>!</b></span>
							<% end %>
						<% end %>
					</td>
				</tr>
			<% end %>
		</table>
	</div>
	<table class="table">
	<tr><td><h4>Pontuação final:</h4></td> 		<td style="color:green"><%= @sum %></td></tr>
	<tr><td><h4>Pontuação Máxima:</h4></td> 	<td style="color:red"><%= @max %></td></tr>
	<tr><td><h4>Porcentagem:</h4></td> 			<td style="color:#f0ad4e"><%= @percent_of_hits %>%</td></tr>
	</table>
</div>

<script type="text/javascript">

	var aux = 0;
	$('.show-wrapper').hide();
	
    var progress = setInterval(function() {
    	console.log("got to interval", aux)
	    var $bar = $('.progress-bar');

	    if (aux >= 100) {
	        clearInterval(progress);
	        $('.progress-wrapper').hide();
	        $('.show-wrapper').show();
	    } else {
	    	$bar.attr("aria-valuenow", aux)
	        $bar.width(aux+ "%");
	        $bar.text(aux + "%");
	        var random = Math.floor((Math.random() * 10) + 1);
	        aux = aux + random;
	    }
	}, 200);

	
</script>